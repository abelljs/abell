{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Basic Options */
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "scripts", "defaults"]
}